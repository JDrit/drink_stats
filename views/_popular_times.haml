- content_for :javascript do
  var r = Raphael("#{"popular-#{unit}" if unit}");
  var line = r.g.linechart(100,20,400,170, #{(0...popular.length).to_a},#{popular.to_s}, {nostroke: false, axis: "0 0 1 1", symbol: "o", smooth: true}).hoverColumn(function () { this.tags = r.set(); for (var i = 0, ii = this.y.length; i < ii; i++) {this.tags.push(r.g.tag(this.x, this.y[i], this.values[i], 160, 10).insertBefore(this).attr([{fill: "#fff"}, {fill: this.symbols[i].attr("fill")}]));}}, function () {this.tags && this.tags.remove();});

- cid = "popular-#{unit}" if unit
%div{:id=>"#{cid}-container"}
  %strong Popular #{unit.capitalize} - #{title}
  %div{:id=>cid}

